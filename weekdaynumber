#include <stdio.h>

int main() {
    
    printf("Please enter a number that corresponds to one of the days in a week: ");
    int weekdaynumber;
    scanf("%d", &weekdaynumber);
    
    switch (weekdaynumber) {
        case 1: {
            printf("\nMonday\n");
            break;
        }
        
        case 2: {
            printf("\nTuesday\n");
            break;
        }
        
        case 3: {
            printf("\nWednesday\n");
            break;
        }
        
        case 4: {
            printf("\nThursday\n");
            break;
        }
        
        case 5: {
            printf("\nFriday\n");
            break;
        }
        
        case 6: {
            printf("\nSaturday\n");
            break;
        }
        
        case 7: {
            printf("\nSunday\n");
            break;
        }
        
        default: {
            printf("\nYou entered a number which doesn't correspond to any day in the week\n");
            break;
        }
    }

    return 0;
}
